<p id="notice"><%= notice %></p>

<p>
  <strong>Gwamokid:</strong>
  <%= @post.gwamokid %>
</p>

<p>
  <strong>Username:</strong>
  <%= @post.username %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<h6>Replies</h6>
<% @post.replies.each do |reply| %>
  <p>
    <strong>User:</strong>
    <%= reply.reply_user %>
  </p>
  <p>
    <strong>Reply:</strong>
    <%= reply.body %>
  </p>
<% end %>

<h6>Reply:</h6>
<%= form_for([@post, @post.replies.build]) do |f| %>
  <p>
    <%= f.label :reply_user %><br>
    <%= f.text_field :reply_user %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>