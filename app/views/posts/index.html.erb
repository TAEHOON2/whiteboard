<p id="notice"><%= notice %></p>

<h1><%= @currentgwamokid %>의 게시판 </h1>

<table>
  <thead>
    <tr>
      <th>현재과목</th>
      <th>작성자</th>
      <th>제목</th>
      <th>내용</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post|
     if post.gwamokid == @currentgwamokid %>
      <tr>
        <td><%= post.gwamokid %></td>
        <td><%= post.username %></td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to '보기', post %></td>
        <td><%= link_to '수정하기', edit_post_path(post) %></td>
        <td><%= link_to '삭제하기', post, method: :delete, data: { confirm: '정말 삭제하시겠습니까?' } %></td>
      </tr>
      <% end%> 
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '새 글 작성하기', new_post_path(:currentgwamokid=> @currentgwamokid)  %>
