<div class="postbox">
  
  <p class="text1"> 자유게시판</p>

<div id="wannawrite">
    <%= link_to '새 글 작성하기', new_post_path(:currentgwamokid=> @currentgwamokid)  %>
  </div>
  <table class="posttable">
  <thead>
    <tr>
      <th>카테고리</th>
      <th>작성자</th>
      <th>제목</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post|
     if post.gwamokid == @currentgwamokid %>
      <tr>
        <td class="post-t"><%= post.category %></td>
        <td class="post-t"><%= post.username %></td>
        <td><%= post.title %></td>
        <td class="post-btn"><%= link_to '보기', post %></td>
        <td class="post-btn"><%= link_to '수정', edit_post_path(post) %></td>
        <td class="post-btn"><%= link_to '삭제', post, method: :delete, data: { confirm: '정말 삭제하시겠습니까?' } %></td>
      </tr>
      <% end%> 
    <% end %>
  </tbody>
  </table>


  
</div>
