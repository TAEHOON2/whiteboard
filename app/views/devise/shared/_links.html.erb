
  <%- if controller_name != 'sessions' %>
  <div id="devise-link"><%= link_to "로그인", new_session_path(resource_name) %></div>
  <% end -%>


  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <div id="devise-link"><%= link_to "회원가입", new_registration_path(resource_name) %></div>
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
     <div id="devise-link"><%= link_to "비밀번호 찾기", new_password_path(resource_name) %></div>
  <% end -%>
  
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div id="devise-link"><%= link_to "이메일 재인증", new_confirmation_path(resource_name) %></div>
  <% end -%>
  
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div id="devise-link"><%= link_to "언락 안내를 못 받으셨나요?", new_unlock_path(resource_name) %></div>
  <% end -%>
  
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <div id="devise-link"><%= link_to "#{OmniAuth::Utils.camelize(provider)}로 로그인하기", omniauth_authorize_path(resource_name, provider) %></div>
    <% end -%>
  <% end -%>