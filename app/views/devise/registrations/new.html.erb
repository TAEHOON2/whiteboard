<div class="graybg">
  <div class="user_whiteboard">

  <a href="/" class="logo"><%= image_tag("logo.png") %></a>  
  <p class="text1">회원가입</p>
 <p class="text2">막걸리샛끼 인증받기</p>

    <div class="boundary1">
      <div class="form">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        
        

        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email, :label => false, required: false, autofocus: true, placeholder: "이메일@korea.ac.kr", :input_html => { :class => '.text' }%>  
        </div>
        <div class="form-actions">
          <%= f.button :submit, "확인" %>
        </div>
        <% end %>
        <p class="text3">* 학교 이메일로 인증번호를 안내해드립니다.</p>
      </div>
     
    </div>
    
    
</div>
</div>